<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.ComboBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iwant.test.FontAppController">
    <children>
        <HBox style="-fx-spacing: 10;" VBox.vgrow="ALWAYS">
            <children>
                <VBox style="-fx-spacing: 5;">
                    <children>
                        <Label text="字体：">
                            <font>
                                <Font name="Meiryo UI Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label fx:id="font" prefWidth="150.0" style="-fx-border-color: #999999;" VBox.vgrow="ALWAYS" />
                        <ListView fx:id="fontList" maxHeight="100.0" maxWidth="150.0" />
                    </children>
                </VBox>
                <VBox style="-fx-spacing: 5;">
                    <children>
                        <Label text="字形：">
                            <font>
                                <Font name="Meiryo UI Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label fx:id="type" prefWidth="100.0" style="-fx-border-color: #999999;" />
                        <ListView fx:id="typeList" maxHeight="100.0" maxWidth="100.0" />
                    </children>
                </VBox>
                <VBox style="-fx-spacing: 5;">
                    <children>
                        <Label text="大小：" >
                            <font>
                                <Font name="Meiryo UI Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label fx:id="size" prefWidth="100.0" style="-fx-border-color: #999999;" />
                        <ListView fx:id="sizeList" maxHeight="100.0" maxWidth="100.0" />
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </HBox>
        <HBox style="-fx-spacing: 10;" VBox.vgrow="ALWAYS">
            <children>
                <VBox style="-fx-spacing: 5;">
                    <children>
                        <Label text="颜色：" >
                            <font>
                                <Font name="Meiryo UI Bold" size="12.0" />
                            </font>
                        </Label>
                        <ComboBox  fx:id="colorList" prefWidth="150.0" />
                        <HBox style="-fx-spacing: 10;">
                            <children>
                                <Button fx:id="ok" prefWidth="70.0" text="确定" />
                                <Button fx:id="cancel" prefWidth="70.0" text="取消" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox style="-fx-spacing: 5;">
                    <children>
                        <Label text="示例：" >
                            <font>
                                <Font name="Meiryo UI Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label fx:id="sample" alignment="CENTER" maxHeight="50.0" maxWidth="210.0" minHeight="50" minWidth="210.0" style="-fx-border-color: #999999;" text="字体abc123" />
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
